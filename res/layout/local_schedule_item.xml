<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/mixed_feed_track"
        android:layout_width="52.0dip"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6.0dip"
            android:gravity="center"
            android:text="12"
            android:textColor="#252524"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="星期六"
            android:textColor="#252524"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/weather"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_below="@id/week"
            android:layout_marginLeft="4.0dip"
            android:src="@drawable/sun" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/weather"
            android:layout_alignTop="@id/weather"
            android:layout_below="@id/week"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@id/weather"
            android:gravity="center"
            android:text="武汉"
            android:textColor="#252524"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/mixed_feed_track"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/smalldot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.0dip"
            android:layout_marginTop="23.0dip"
            android:src="@drawable/work" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/smalldot"
            android:layout_marginLeft="14.0dip"
            android:layout_toRightOf="@id/smalldot" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pm"
                android:text="6:30"
                android:textSize="12sp" 
                android:textColor="#252524" />

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/time"
                android:layout_alignTop="@id/time"
                android:layout_toRightOf="@id/time"
                android:src="@drawable/alarm" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/time"
                android:layout_alignTop="@id/time"
                android:layout_toRightOf="@id/alarm"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/important" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/important"
                android:text="have a good time!"
                android:textColor="#252524" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>