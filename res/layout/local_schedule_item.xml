<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/listview_item_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/date_title_layout"
        android:layout_width="fill_parent"
	    android:layout_height="30dip"
	    android:gravity="center_vertical"
	    android:background="#ffffff" >  
	    
	    <TextView
	        android:id="@+id/schedule_date"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="10dip"
	        android:textSize="22sp"
	        android:gravity="center"
	        android:textColor="@android:color/black" />
    
	    <TextView
	        android:id="@+id/schedule_week"
	        android:layout_toRightOf="@id/schedule_date"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="10dip"
	        android:textSize="12sp"
	        android:gravity="center"
	        android:textColor="@android:color/darker_gray" />
	    
	    <TextView
	        android:id="@+id/schedule_year_month"
	        android:layout_toRightOf="@id/schedule_week"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_centerVertical="true"
	        android:textSize="12sp"
	        android:gravity="center"
	        android:background="@drawable/schedule_year_month"
	        android:textColor="@android:color/white" />
	    
	    <TextView
	        android:id="@+id/schedule_lunar"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip"
	        android:textSize="12sp"
	        android:gravity="center"
	        android:textColor="@android:color/darker_gray" />     
	        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/local_schedule_item_info"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
	    <RelativeLayout
	        android:id="@+id/date_layout"
	        android:layout_width="52.0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip" >
	
	        <TextView
	            android:id="@+id/date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_marginTop="12dip"
	            android:gravity="center"
	            android:text="12"
	            android:textColor="#252524"
	            android:textSize="28sp"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/week"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@id/date"
	            android:layout_centerHorizontal="true"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:text="星期六"
	            android:textColor="#252524"
	            android:textSize="10sp" />
	
	        <ImageView
	            android:id="@+id/weather"
	            android:layout_width="20dip"
	            android:layout_height="20dip"
	            android:layout_below="@id/week"
	            android:layout_marginLeft="4.0dip"
	            android:src="@drawable/sun" />
	
	        <TextView
	            android:id="@+id/location"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignBottom="@id/weather"
	            android:layout_alignTop="@id/weather"
	            android:layout_below="@id/week"
	            android:layout_marginLeft="2.0dip"
	            android:layout_toRightOf="@id/weather"
	            android:gravity="center"
	            android:text="武汉"
	            android:textColor="#252524"
	            android:textSize="10sp" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_toRightOf="@id/date_layout"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="1.5dip"
	            android:layout_marginTop="23.0dip"
	            android:gravity="center"
	             />
	
	        <RelativeLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10.0dip"
	            android:layout_marginLeft="14.0dip"
	            android:gravity="center"
	            android:layout_toRightOf="@id/type" >
	
	            <TextView
	                android:id="@+id/yearandmonth"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#252524"
	                android:textSize="12sp"
	                android:visibility="gone" />
	            <TextView
	                android:id="@+id/time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@id/yearandmonth"
	                android:layout_alignTop="@id/yearandmonth"
	                android:layout_toRightOf="@id/yearandmonth"
	                android:background="@drawable/pm"
	                android:text="6:30"
	                android:textColor="#252524"
	                android:textSize="12sp" />
	
	            <ImageView
	                android:id="@+id/alarm"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@id/time"
	                android:layout_alignTop="@id/time"
	                android:layout_marginLeft="2dip"
	                android:layout_toRightOf="@id/time"
	                android:src="@drawable/alarm" />
	
	            <ImageView
	                android:id="@+id/share"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignBottom="@id/time"
	                android:layout_alignTop="@id/time"
	                android:layout_marginLeft="2dip"
	                android:layout_toRightOf="@id/alarm"
	                android:src="@drawable/share" />
	
	            <ImageView
	                android:id="@+id/important"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:src="@drawable/important" />
	
	            <TextView
	                android:id="@+id/content"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/important"
	                android:text="have a good time!"
	                android:textColor="#252524" />
	        </RelativeLayout>
	    </RelativeLayout>
    </RelativeLayout>
    

</LinearLayout>